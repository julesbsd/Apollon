rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ==========================================
    // EXERCISE IMAGES (Workout API)
    // ==========================================
    
    // Images d'exercices du catalogue
    // Stockées via lazy loading depuis l'app
    match /exercise_images/{imageId} {
      // Lecture publique (catalogue public)
      allow read: if true;
      
      // Écriture pour utilisateurs authentifiés
      // (téléchargement automatique depuis Workout API)
      allow write: if request.auth != null;
    }
    
    // ==========================================
    // USER UPLOADS
    // ==========================================
    
    // Avatars, photos de progression, etc.
    match /user_uploads/{userId}/{allPaths=**} {
      // Lecture: propriétaire uniquement
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Écriture: propriétaire uniquement avec limite de taille
      allow write: if request.auth != null && 
                      request.auth.uid == userId &&
                      request.resource.size < 5 * 1024 * 1024; // Max 5MB
    }
    
    // ==========================================
    // RÈGLES PAR DÉFAUT (DENY ALL)
    // ==========================================
    
    // Tout autre chemin est interdit
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
